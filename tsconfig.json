{
  "compilerOptions": {
    "noImplicitAny": false,
    "outDir": "build/types",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
  //  "skipLibCheck": true,  // TS2611 issue in pixi spine,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["src/lib"],
  "exclude": ["src/lib/**/tests"]
}